        <script>
            // JavaScript for changing background color on mouseover
    
            var frequentlyAskedQuestions = document.getElementById("frequently-asked-questions");
        
  
            frequentlyAskedQuestions.addEventListener("mouseover", function() {
                frequentlyAskedQuestions.style.backgroundColor = "lightblue";
            });
            frequentlyAskedQuestions.addEventListener("mouseout", function() {
                frequentlyAskedQuestions.style.backgroundColor = ""; // Revert to default background color
            });
