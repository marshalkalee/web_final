    <!-- JavaScript для переключения языка -->
    <script>
        function changeLanguage() {
            var elements = document.querySelectorAll('.lang');
            elements.forEach(function(element) {
                var key = element.getAttribute('key');
                var lang = element.getAttribute('lang');
                
        
        // Обработка переключения текста с английского на русский и наоборот
        if (lang === 'en') {
            if (key === 'about') {
                element.textContent = 'Главная';
            } else if (key === 'course') {
                element.textContent = 'Курсы';
            } else if (key === 'benefits') {
                element.textContent = 'Прием';
            } else if (key === 'faq') {
                element.textContent = 'Часто задаваемые вопросы';
            } else if (key === 'us') {
                element.textContent = 'О нас';
            } else if (key === 'welcome') {
                element.textContent = 'Добро пожаловать в языковую школу';
            } else if (key === 'begin') {
                element.textContent = 'Начните свое приключение в изучении новых языков';
            } else if (key === 'discover') {
                element.textContent = 'Откройте новые культуры';
            } else if (key === 'embark') {
                element.textContent = 'Отправляйтесь в путешествие по изучению языков и культурной эксплуатации';
            } else if (key === 'join') {
                element.textContent = 'Присоединяйтесь к нашему сообществу';
            } else if (key === 'our_courses') {
                element.textContent = 'Наши курсы';
            } else if (key === 'english') {
                element.textContent = 'Английский';
            } else if (key === 'start') {
                element.textContent = 'Начните свое путешествие с нашего курса английского языка.';
            } else if (key === 'more') {
                element.textContent = 'Узнать больше';
            } else if (key === 'italian') {
                element.textContent = 'Итальянский';
            } else if (key === 'master') {
                element.textContent = 'Освойте итальянский язык с помощью нашего продвинутого курса.';
            } else if (key === 'more') {
                element.textContent = 'Узнать больше';
            } else if (key === 'spanish') {
                element.textContent = 'Испанский';
            } else if (key === 'improve') {
                element.textContent = 'Улучшите навыки испанского языка с помощью нашего курса.';
            } else if (key === 'more') {
                element.textContent = 'Узнать больше';
            } else if (key === 'flexible_learning') {
                element.textContent = 'Гибкое обучение';
            } else if (key === 'flexible_learning_desc') {
                element.textContent = 'Мы предлагаем гибкие варианты обучения, включая групповые занятия, частные занятия, онлайн-курсы и погружающиеся языковые опыты, отвечающие разнообразным потребностям и расписанию наших студентов.';
            } else if (key === 'career_advancement') {
                element.textContent = 'Карьерное продвижение';
            } else if (key === 'career_advancement_desc') {
                element.textContent = 'Владение языками все более ценится в сегодняшнем глобализованном мире. Наша школа обеспечивает студентов языковыми навыками, необходимыми для успеха в международных карьерных возможностях, расширения их профессиональных сетей и улучшения их трудоустройства.';
            } else if (key === 'diverse_language') {
                element.textContent = 'Разнообразие языков';
            } else if (key === 'diverse_language_desc') {
                element.textContent = 'С широким выбором языковых курсов студенты имеют возможность изучать популярные языки, такие как английский, испанский и итальянский.';
            } else if (key === 'start_learning_header') {
                element.textContent = 'Готовы ли вы начать свой учебный путь?';
            } else if (key === 'take_quiz') {
                element.textContent = 'Пройдите тест';
            }
            
            // Обновление языковой метки для элемента
            element.setAttribute('lang', 'ru');
        } else {
            // Если язык элемента - русский
            // Обработка переключения текста с русского на английский
            if (key === 'Главная') {
                element.textContent = 'Home';
            } else if (key === 'Курсы') {
                element.textContent = 'Courses';
            } else if (key === 'Прием') {
                element.textContent = 'Admission';
            } else if (key === 'Часто задаваемые вопросы') {
                element.textContent = 'FAQ';
            } else if (key === 'О нас') {
                element.textContent = 'About Us';
            } else if (key === 'Добро пожаловать в языковую школу') {
                element.textContent = 'Welcome to Language School';
            } else if (key === 'Начните свое приключение в изучении новых языков') {
                element.textContent = 'Begin your adventure in learning new languages';
            } else if (key === 'Откройте новые культуры') {
                element.textContent = 'Discover New Cultures';
            } else if (key === 'Отправляйтесь в путешествие по изучению языков и культурной эксплуатации') {
                element.textContent = 'Embark on a journey of language learning and cultural exploration';
            } else if (key === 'Присоединяйтесь к нашему сообществу') {
                element.textContent = 'Join Our Community';
            } else if (key === 'Наши курсы') {
                element.textContent = 'Our Courses';
            } else if (key === 'Гибкое обучение') {
                element.textContent = 'Flexible Learning';
            } else if (key === 'Мы предлагаем гибкие варианты обучения, включая групповые занятия, частные занятия, онлайн-курсы и погружающиеся языковые опыты, отвечающие разнообразным потребностям и расписанию наших студентов.') {
                element.textContent = 'We offer flexible learning options, including group classes, private tutoring, online courses, and immersive language experiences, catering to the diverse needs and schedules of our students.';

            } else if (key === 'Карьерное продвижение') {
                element.textContent = 'Career Advancement';
            } else if (key === 'Владение языками все более ценится в сегодняшнем глобализованном мире. Наша школа обеспечивает студентов языковыми навыками, необходимыми для успеха в международных карьерных возможностях, расширения их профессиональных сетей и улучшения их трудоустройства.') {
                element.textContent = 'Language proficiency is increasingly valued in today\'s globalized world. Our school equips students with the language skills necessary to excel in international career opportunities, broaden their professional networks, and enhance their job prospects.';
            } else if (key === 'Разнообразие языков') {
                element.textContent = 'Diverse Language';
            } else if (key === 'С широким выбором языковых курсов студенты имеют возможность изучать популярные языки, такие как английский, испанский и итальянский.') {
                element.textContent = 'With a wide range of language courses available, students have the opportunity to learn popular languages such as English, Spanish, and Italian.';
            } else if (key === 'Готовы ли вы начать свой учебный путь?') {
                element.textContent = 'Are you ready to start your learning journey?';
            } else if (key === 'Пройдите тест') {
                element.textContent = 'Take the Quiz';
            }

            // Обновление языковой метки для элемента
            element.setAttribute('lang', 'en');
        }
    });
}
